<section class="block-awards" id="awards">
  <div class="container">
    {{> shared/section-title }}
    <div class="block-awards__wrap">
      {{#each list}}
      <div class="block-awards__item">
        <div class="block-awards__item__img">
          {{{getImg src=img}}}
        </div>
        <div class="block-awards__item__label">{{label}}</div>
        <div class="block-awards__item__descr">{{descr}}</div>
      </div>
      {{/each}}
    </div>
    <div class="banner banner--awards">
      <div class="banner__bg">
        {{{getPicture src="banners/bg__1.png" md="banners/bg__1__md.png" s="banners/bg__1__s.png"}}}
      </div>
      <div class="banner__label">Посмотреть кейсы DION</div>
      <div class="banner__btns">
        <a href="/assets/docs/DION_cases.pdf" class="banner__btn" download=""
          onclick="_tmr.push({ type: 'reachGoal', id: 3655439, goal: 'click_pdf'});"
        >Скачать презентацию</a>
      </div>
    </div>
  </div>
</section>