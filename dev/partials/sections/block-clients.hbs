<section class="block-clients" id="clients">
  <div class="container">
    {{> shared/section-title }}
    <div class="block-clients__wrap">
      {{#each list}}
        <div class="block-clients__item">
          <div class="block-clients__item__img">
            {{{getImg src=img}}}
          </div>
          <div class="block-clients__item__label">{{label}}</div>
          <div class="block-clients__item__descr">{{descr}}</div>
        </div>
      {{/each}}
    </div>
  </div>
</section>